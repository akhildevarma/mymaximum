<section class="admin-actions" style="background: #4e4e4e; padding: 10px 20px; margin-top:-1px;">
  <div class="">
    <div class="row">
      <div class="">
        <% if @inquiry.published_at? %>
          <%= link_to 'Unpublish', remove_custom_admin_news_path(@inquiry),id: "completed_inquiry_#{@inquiry.id}", rel: 'Unpublish', class: "btn btn-primary btn-danger pull-right" %>
        <% else %>
           <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modalPublish">Publish</button>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!-- Modal -->
<div id="modalPublish" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Publishing an Inquiry</h4>
      </div>
      <div class="modal-body">
        <%= form_for :inquiry, url: publish_custom_admin_news_url(@inquiry), html: { multipart: true, method: :get, class: 'form-horizontal' } do |f| -%>
       
        <div class="form-group">
          <%= f.label "View Everyone", class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
          <%= f.check_box :view_everyone, :checked => true %> 
          </div>
          </div>
          <div class="form-group">
            
            <%= f.label "Publishable Title", class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
            <%= f.text_area :title, rows: 2, cols: 60 %>
            </div>
           
          </div>
          <div class="form-group">
            
            <%= f.label "Question" , class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
            <%= f.text_area :question, rows: 2, cols: 60 %>
            </div>
            
          </div>
        <br />
        <input name="button" class='pull-right' value="Submit" onclick=" $('form').submit();" type="button"></br>
       <% end -%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
