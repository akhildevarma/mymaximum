<div>
 <h2>Flagged Comments/Users</h2>
  <hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Comment</th>
      <th>Flagged By</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- @flagged_comments.each do |flagged_comment| -%>
    <tr id="<%= dom_id(flagged_comment) -%>">
      <td>
        <%= flagged_comment.comment.body -%>
      </td>
      <td><%=flagged_comment.user.email if flagged_comment.user.present?%>
      </td>
      <td>
       <%= link_to 'Delete', custom_admin_flagged_comment_path(flagged_comment), method: :delete, rel: 'delete-flagged-comment', class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this flagged comment?' } -%>
      </td>
    </tr>
    <%- end -%>
    <tr>
      <td colspan="4">
        <div class="pull-right">
          <%= will_paginate @flagged_comments %>
        </div>
      </td>
    </tr>
  </tbody>
</table>
</div>



