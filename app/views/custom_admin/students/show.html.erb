<h1>
  Student Information
</h1>

<%= form_for @student, url: custom_admin_student_path(@student) do |f| %>
  <table class="table table-hover">
    <tbody>
      <tr>
        <th>ID</th>
        <td>
          <%= @student.id -%>
        </td>
      </tr>
      <tr>
        <th>Email</th>
        <td>
          <%= @student.email -%>
        </td>
      </tr>
      <tr>
        <th>Can Assign</th>
        <td>
          <%= f.check_box :can_assign -%>
        </td>
      </tr>
      <tr>
        <th>Is Alumn</th>
        <td>
          <%= f.check_box :is_alumn -%>
        </td>
      </tr>

      <tr>
        <th>Is Priority</th>
        <td>
          <%= f.check_box :is_priority -%>
        </td>
      </tr>
      <tr>
        <th>Last Assignment</th>
        <td>
          <%= @student.last_auto_assign ? local_time(@student.last_auto_assign, "%b %d, %Y %l:%M:%S%p") : '' -%>
        </td>
      </tr>
    </tbody>
  </table>

  <%= f.submit "Update", class: "btn btn-success pull-right" -%>
<% end %>
