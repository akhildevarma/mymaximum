<% unless flash.empty? %>
  <div id="flash-messages-wrapper" class="row">
    <div class="alerts">
      <% flash.each do |type, message| %>
        <div class="alert <%= bootstrap_class_for(type) %> fade in">
          <div class="container">
            <div class="row">
              <div class="col-xs-12">
                <button class="close" data-dismiss="alert">Ã—</button>
                <%= message.try(:html_safe) unless message.blank? %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>



  <script>
    $(".alert").delay(5000).slideUp(500, 'swing', function() {
        $(this).alert('close');
        $("#flash-messages-wrapper").hide();
    });
  </script>
<% end %>
