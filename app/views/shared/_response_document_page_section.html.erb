<section class="response-document-page-section">
  <header class="response-document-page-section-title">
    <%= title %>
  </header>
  <article class="response-document-page-section-content">
    <p class="">
      <%= simple_format h(object) -%>
    </p>
  </article>
  <%- if references && references.present? -%>
  <footer class="response-document-page-section-footer">
    References:
    <small class="references">
      <%= simple_format h(references) -%>
    </small>
  </footer>
  <%- end -%>
</section>
